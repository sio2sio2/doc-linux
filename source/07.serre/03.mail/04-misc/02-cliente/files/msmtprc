defaults
   logfile ~/.msmtp.log
   syslog on
   tls_certcheck off

account gmail
   host smtp.gmail.com
   from mi_cuenta@gmail.com
   auth on
   user mi_cuenta@gmail.com
   password contraseña
   tls on
   tls_starttls on
   tls_certcheck on
   tls_trust_file /etc/ssl/certs/ca-certificates.crt
   maildomain gmail.com

account example
   host smtp.example.net
   from josem@example.net
   auth on
   user yo
   password contraseña
   tls on
   tls_starttls on
   maildomain example.net

account default: gmail


